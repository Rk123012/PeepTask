<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:context=".MapsActivity" />


    <RelativeLayout
        android:id="@+id/rellayout1"
        android:layout_width="330dp"
        android:layout_height="43dp"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="#fff">

        <ImageView
            android:id="@+id/ic_magnify"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"


            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_magnify" />


        <AutoCompleteTextView
            android:id="@+id/input1"
            android:layout_width="329dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"


            android:background="@null"
            android:hint="Search Places"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:textColor="#000"
            android:textSize="15sp"
            android:textStyle="bold" />


    </RelativeLayout>

    <ImageView
        android:id="@+id/ic_gps"
        android:layout_width="40dp"
        android:layout_height="40dp"


        android:layout_alignEnd="@+id/rellayout1"
        android:layout_alignTop="@+id/place_picker"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_gps" />

    <ImageView
        android:id="@+id/place_picker"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/rellayout1"
        android:layout_alignParentTop="true"


        android:layout_alignStart="@+id/rellayout1"
        android:layout_marginTop="75dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_map"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btnMirpur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="77dp"
        android:layout_marginStart="25dp"


        android:text="Mirpur 3" />

    <Button
        android:id="@+id/btnGazipur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnMirpur"
        android:layout_centerHorizontal="true"

        android:text="Gazipur 3" />

    <Button
        android:id="@+id/btnSylhet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/rellayout1"
        android:layout_alignTop="@+id/btnMirpur"


        android:text="Sylhet 3" />


    <Button
        android:id="@+id/btnMarker"
        android:layout_width="187dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:background="@drawable/button_round"
        android:text="Snapshots"
        />






</RelativeLayout>